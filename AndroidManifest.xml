<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.pocketsplits"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.pocketsplits.WelcomeActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Black.NoTitleBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.pocketsplits.StopwatchActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.pocketsplits.MeetsActivity"
            android:label="@string/title_activity_meets"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Holo" >
        </activity>
        <activity
            android:name="com.pocketsplits.EventsActivity"
            android:label="@string/title_activity_events"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Holo" >
        </activity>
        <activity
            android:name="com.pocketsplits.AthletesActivity"
            android:label="@string/title_activity_athletes" 
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan"
            android:theme="@android:style/Theme.Holo" >
        </activity>
    </application>

</manifest>
